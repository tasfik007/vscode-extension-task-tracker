{
  "name": "todo-list",
  "displayName": "Todo List",
  "description": "A todo app to track user's progress",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.92.0"
  },
  "categories": [
    "Other"
  ],
  "main": "./extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "my-todo-extension",
          "title": "Tasfik's",
          "icon": "images/todo-icon-2.png"
        }
      ]
    },
    "views": {
      "my-todo-extension": [
        {
          "id": "todoTreeView",
          "name": "Todo List"
        }
      ]
    },
    "commands": [
      {
        "command": "todo-list.openWebviewCommand",
        "title": "Open Webview"
      },
      {
        "command": "todo-list.deleteList",
        "title": "Delete List"
      },
      {
        "command": "todo-list.renameList",
        "title": "Rename List"
      },
      {
        "command": "todo-list.export",
        "title": "Export"
      },
      {
        "command": "todo-list.import",
        "title": "Import"
      },
      {
        "command": "todo-list.addItem",
        "title": "Add New List",
        "icon": "images/add-list-2.png"
      }
    ],
    "menus": {
      "view/item/context": [
        {
          "command": "todo-list.openWebviewCommand",
          "when": "view == todoTreeView",
          "group": "navigation"
        },
        {
          "command": "todo-list.deleteList",
          "when": "view == todoTreeView",
          "group": "navigation"
        },
        {
          "command": "todo-list.renameList",
          "when": "view == todoTreeView",
          "group": "inline"
        }
      ],
      "view/title": [
        {
          "command": "todo-list.export",
          "when": "view == todoTreeView",
          "group": "navigation"
        },
        {
          "command": "todo-list.import",
          "when": "view == todoTreeView",
          "group": "navigation"
        },
        {
          "command": "todo-list.addItem",
          "when": "view == todoTreeView",
          "group": "navigation@3"
        }
      ]
    }
  },
  "scripts": {
    "lint": "eslint .",
    "pretest": "npm run lint",
    "test": "vscode-test",
    "format": "prettier --write \"**/*.{js,ts,json,md}\"",
    "format:check": "prettier --check \"**/*.{js,ts,json,md}\""
  },
  "devDependencies": {
    "@types/mocha": "^10.0.7",
    "@types/node": "20.x",
    "@types/vscode": "^1.92.0",
    "@vscode/test-cli": "^0.0.9",
    "@vscode/test-electron": "^2.4.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "prettier": "^3.3.3",
    "typescript": "^5.4.5"
  }
}
